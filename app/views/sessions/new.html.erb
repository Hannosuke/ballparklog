<div class="login-form-bg d-flex justify-content-center">
    <div class="login-form-wrapper">
        <div class="text-center login-form-title">
            <h1 class="text-dark bolder">SIGN IN</h1>
        </div>
        <div class="login-form bolder border border-dark shadow">
            <div class="form-group">
                <%= form_with(scope: :session, url: login_path, local: true) do |f|%>
                    <div class="form-lagel-group">
                        <%= f.label :メールアドレス%>
                        <%= f.email_field :email, class:"form-control mb-5", placeholder: "メールアドレス"%>
                    </div>

                    <div class="form-lagel-group">
                        <%= f.label :パスワード%>
                        <%= f.password_field :password, class:"form-control mb-5", placeholder: "パスワード"%>
                    </div>
                    <%= f.submit "ログイン", class: "mt-2 btn btn-primary btn-block bolder"%>
                <% end %>  
            </div>
        </div>
    </div>
</div>
