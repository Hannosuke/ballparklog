<div class="login-form-bg">
  <div class="login-form-wrapper d-flex justify-content-center">
    <div class= "login-form-content">
      <div class="login-form-title text-center">
        <h1 class="text-primary bolder">SIGN IN</h1>
      </div>
      <div class="login-form bolder bg-light shadow m-0">
            <div class="form-group">
                <%= form_with(scope: :session, url: login_path, model: @user, local: true) do |f|%>
                    <div class="form-lagel-group">
                        <%= f.label :メールアドレス%>
                        <%= f.email_field :email, value: @email ,class:"form-control mb-5", placeholder: "メールアドレス"%>
                    </div>

                    <div class="form-lagel-group">
                        <%= f.label :パスワード%>
                        <%= f.password_field :password, class:"form-control mb-5", placeholder: "パスワード"%>
                    </div>
                    <%= f.submit "ログイン", class: "mt-2 btn btn-primary btn-block bolder"%>
                <% end %>  
            </div>
            <span class="d-flex justify-content-center">
                <%= link_to("新規登録", new_user_path)%>
            </span>
            <span class="d-flex justify-content-center mt-2">
                <%= link_to("パスワードをお忘れの方はコチラ", new_users_password_path)%>
            </span>
      </div>
    </div>
  </div>
</div>