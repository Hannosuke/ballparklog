<div class="top-bg">
  <div class="bg-mask"></div>
</div>

<!--投稿一覧部分-->
<div class="index-body">
  <div class="row mx-3">
  
    <!--投稿カード部分-->
    <% @ballpark_logs.each do |ballpark_log| %>
      <div class="col-md-3 d-flex justify-content-around mt-3 no-gutters">
        <div class="card mb-4 shadow-sms">
          <!--アイコン画像とユーザ名-->
            <div class="row">
              <div class="col-md-3">
                <% if ballpark_log.user.image.attached? %>
                    <%= image_tag ballpark_log.user.image, class:"index-icon mr-1" %>
                <% else %>
                  <%= image_tag "no-image-icon.jpeg", class:"index-icon mr-1"%>
                <% end %>
              </div>
              <div class="col-md-9 d-flex align-items-center justify-content-start pl-0">
                <p class="card-text"><%= link_to(ballpark_log.user.name,user_path(ballpark_log.user_id), class:"noline black-link") %></p>
              </div>
            </div>
              <%= ballpark_log.id%>

          <!--投稿内容-->
          <div class="card-body">
            <% if ballpark_log.image.attached? %>
              <%= image_tag ballpark_log.image, class:"bd-placeholder-img card-img-top", width:"100%", height:"140" %>
            <% else %>
              <%= image_tag "no-image.png", width:"100%", height:"140" %>
            <% end %>
            <!--試合情報-->
            <div class="card-label row m-0">
              <div class="col-4 p-0 d-flex justify-content-center">
                  <p class="index-team"><%= ballpark_log.game.visitor_team.first_name%></p>
              </div>
              <div class="col-4 p-0 text-center">
                <div>
                  <span class=""><%= ballpark_log.game.visitor_score%></span>
                  <span class="">-</span>
                  <span class=""><%= ballpark_log.game.home_score%></span>
                </div>
              </div>
              <div class="col-4 p-0 d-flex justify-content-center">
                  <p class="index-item"><%= ballpark_log.game.home_team.first_name%></p>
              </div>
            </div>
            <!---入力内容--->
            <%= link_to(ballpark_log.title, ballpark_log, class:"noline black-link") %>
            <% if current_user %>

            <!------いいねボタン--------->
              <div class="ml-3 pb-3">
                <% if Like.find_by(user_id: current_user.id, ballpark_log_id: ballpark_log.id) %>
                  <%= link_to(ballpark_log_like_path(ballpark_log.id, current_user.id), method: :delete) do %>
                    <i class="fas fa-thumbs-up"></i>
                  <% end %>
                <% else %>
                  <div>
                    <button class="btn btn-primary" id="like_button">いいね</button>
                  </div>
                  <input name="current-user-id", type="hidden", value= <%= current_user.id%> class="current-user-id" >
                  <input name="ballparklog-id", type="hidden", value= <%= ballpark_log.id%> class="ballparklog-id" >
                <% end %>

                <%= ballpark_log.count_likes %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>