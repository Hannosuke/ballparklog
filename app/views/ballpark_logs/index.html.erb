<div class="top-background">
</div> 

<div class="index-body">
  <div class="row ml-3 mr-3">
    <% @ballpark_logs.each do |ballpark_log| %>
      <div class="col-md-3 d-flex justify-content-around mt-3">
        <div class="card mb-4 shadow-sm">
          <% if ballpark_log.image.attached? %>
            <%= image_tag ballpark_log.image, class:"bd-placeholder-img card-img-top", width:"100%", height:"200" %>
          <% else %>
            <%= image_tag "no-image.png", width:"100%", height:"200" %>
          <% end %>
          
          <div class="card-body">
            <p class="card-text"><%= link_to(ballpark_log.user.name,user_path(ballpark_log.user_id), class:"noline black-link") %></p>
            <%= link_to(ballpark_log.title, ballpark_log, class:"noline black-link") %>
          </div>

          <% if current_user %>
            <div class="ml-3 pb-3">
              <% if Like.find_by(user_id: current_user.id, ballpark_log_id: ballpark_log.id) %>
                <%= link_to(ballpark_log_like_path(ballpark_log.id, current_user.id), method: :delete) do %>
                  <i class="fas fa-thumbs-up"></i>
                <% end %>
              <% else %>
                <%= link_to(ballpark_log_likes_path(ballpark_log.id), method: :post) do %>
                  <i class="far fa-thumbs-up"></i>
                <% end %>
              <% end %>
              <%= ballpark_log.count_likes %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>