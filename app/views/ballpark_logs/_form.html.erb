<div class="log-form-body mt-3">
  <div class="form-group">
    <input type="text" id="datepicker" value="&#xf073;" class="form-control far mt-4 mb-4"> 
    <%= form_with(model: ballpark_log, local: true) do |f| %>
      <div class="mb-4">
        <%= f.collection_select :stadium_id, Stadium.all, :id, :name, {include_blank: "球場"}, {class:"game-date form-control"}%>   
      </div>
      <div class="mb-4">
        <select name="ballpark_log[game_id]" id="ballpark_log_game_id" class="game-select form-control">
          <option>試合</option>
        </select>
      </div>
      <div class="mb-4">
        <%= f.select :result, [["WIN", "WIN"], ["LOSE", "LOSE"],["DRAW", "DRAW"]], {include_blank: "勝敗"}, class:"form-control" %>
      </div>
      <div class="mb-4">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">
              <i class="fas fa-baseball-ball"></i>
            </span>
          </div>
          <%= f.text_field :title, class:"form-control", placeholder: "タイトル" %>
        </div>
      </div>
      <div class="mb-4">
        <%= f.text_area :description, class:"form-control", placeholder: "メモ" %>
      </div>
      <div class="log-image-btn mb-4">
        <%= f.label :image, class:"d-block" do%>
          <span class="pl-2">  
            <i class="far fa-image fa-lg fa-fw"></i>画像をアップロード
          </span>
        <% end %>
        <%= f.file_field :image, class:"d-none form-control-file"%>
        <%# <div id="preview"></div> %>
      </div>

      <%= f.submit "登録する", class:"btn btn-primary btn-block btn-lg mt-4 mb-4"%>
    <% end %>
    <% if @ballpark_log.errors.any? %>
      <ul id="error_explanation" class="alert alert-warning border border-0">
          <% @ballpark_log.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    <% end %>
  </div>
</div>





