<div class="ballparklog-show-bg">
    <div class="bg-mask">

        <div class="log-show-body container shadow-sm bg-white">
            <div class="mx-4">  
                <!--ユーザー情報部分-->
                <div class="show-header d-flex flex-column flex-md-row align-items-center p-3 px-md-2 bg-white">
                    <% if @ballpark_log.user.image.attached? %>
                        <div class="rounded-circle">
                            <%= image_tag @ballpark_log.user.image, class:"index-icon mr-4" %>
                        </div>
                    <% else %>
                        <%= image_tag "no-image-icon.jpeg", class:"index-icon mr-4"%>
                    <% end %>
                    <div class="my-0 mr-md-auto font-weight-normal"><%= link_to(@ballpark_log.user.name,user_path(@ballpark_log.user_id), class:"noline black-link") %></div>
                    <nav class="my-2 my-md-0 mr-md-3">
                        <% if current_user && current_user.id == @ballpark_log.user_id %>
                            <%= link_to("Edit", edit_ballpark_log_path(@ballpark_log), class:"btn btn-outline-secondary") %> 
                        <% end %>
                    </nav>
                </div>
                
                <h1 class="text-center border-bottom pt-4"><%= @ballpark_log.title %></h1>

                <!--試合結果部分-->
                <p>2020年8月1日     <%= @ballpark_log.stadium.name %></p>
                <div>
                    <div class="row text-center">
                        <div class="col-md-4">
                            <h2>TIGERS</h2>
                        </div>
                        <div class="col-md-4">
                            <span>3</span>
                            <span>-</span>
                            <span>7</span>
                        </div>
                        <div class="col-md-4">
                            <h2>BAYSTARS</h2>
                        </div>
                    </div>

                    <div class="row text-center">
                        <div class="col-md-4">
                            <p>VISITOR</p>
                        </div>
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <p>HOME</p>
                        </div>
                    </div>
                </div>

                <!--文章部分-->      
                <p class="pt-3"><%= @ballpark_log.description %></p>
                <div class="text-center pb-3">
                    <%= image_tag @ballpark_log.image, width:"60%", height:"60%" if @ballpark_log.image.attached? %>
                </div>

                <% if current_user %>
                    <div>
                        <% if Like.find_by(user_id: current_user.id, ballpark_log_id: @ballpark_log.id) %>
                            <%= link_to("likes/#{@ballpark_log.id}/destroy", method: :delete) do %>
                                <i class="fas fa-thumbs-up"></i>
                            <% end %>
                        <% else %>
                            <%= link_to("likes/#{@ballpark_log.id}/create", method: :post) do %>
                                <i class="far fa-thumbs-up"></i>
                            <% end %>
                        <% end %>
                        <%= Like.where(ballpark_log_id: @ballpark_log.id).count %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
