<div class="user-form-bg d-flex justify-content-center">
  <div class="user-form-wrapper">
    <div class="text-center user-form-title">
      <h1 class="text-dark bolder">SIGN UP</h1>
    </div>
    <div class="user-form bolder border border-dark shadow">
      <div class="form-group">
        <%= form_with(model: @user, local: true) do |f| %>
          <%= f.label :name%>
          <%= f.text_field :name, class:"form-control mb-3" %>
          <%= f.label :お気に入りチーム %>
          <%= f.fields_for :favorite_team do |fav|%>
            <%= fav.collection_select :team_id, Team.all.order(:id), :id, :name, {include_blank: true}, {class:"form-control mb-3 pl-2"} %>
          <% end %>          
          <%= f.label :email %>
          <%= f.email_field :email, class:"form-control mb-3" %>
          <%= f.label :パスワード%>
          <%= f.password_field :password, class:"form-control mb-3" %>
          <%= f.label :"パスワード(確認)" %>
          <%= f.password_field :password_confirmation, class:"form-control mb-5" %>
          <%= f.submit "登録", class:"btn btn-primary btn-block bolder"%>
        <% end %>
        <% if @user.errors.any? %>
          <ul id="error_explanation" class="alert alert-warning mt-3">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>      
</div>