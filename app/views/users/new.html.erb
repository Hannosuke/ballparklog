<div class="container">
  <div class="form-sign">
    <div class="text-center mb-4">
      <h1 class="h3 font-weight-normal">Sign up</h1>
    </div>

    <div class="form-group">
        <%= form_with(model: @user, local: true) do |f| %>
            <%= f.label :名前%>
            <%= f.text_field :name, class:"form-control mb-3" %>
            <%= f.label :お気に入り球団 %>
            <%= f.fields_for :favorite_team do |fav|%>
              <%= fav.collection_select :team_id, Team.all, :id, :name, include_blank: true, class:"custom-select" %>
            <% end %>            
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, class:"form-control mb-3" %>
            <%= f.label :パスワード%>
            <%= f.password_field :password, class:"form-control mb-3" %>
            <%= f.label :"パスワード(確認)" %>
            <%= f.password_field :password_confirmation, class:"form-control mb-3" %>
            <%= f.submit "Sign up", class:"btn btn-primary btn-block"%>

            <% if @user.errors.any? %>
            <ul id="error_explanation" class="alert alert-warning mt-3">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </ul>
          <% end %>
    </div>
  </div>
<% end %>
</div>