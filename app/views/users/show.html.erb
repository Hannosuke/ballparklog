<div class="show-top mb-0 p-0">
  <div class="bg-mask text-center d-flex align-items-center">
    <div class="show-contents border d-flex align-items-center justify-content-center">
      <div>
        <h1 class="text-white pt-4"><%= @user.count_win %>勝<%= @user.count_lose %>敗  <%= @user.winning_percentage %></h1>
        <div class="form-group">
          <label>
            <select class="form-control border-0 opacity-form">
              <option value="">2020年〜</option>
              <option value="">2019年〜2020年</option>
              <option value="">ALL</option>
            </select>
          </label>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="user-show-body pb-0 d-flex flex-column flex-md-row align-items-center bg-white">
  <% if @user.image.attached? %>
    <div class="rounded-circle">
      <%= image_tag @user.image, class:"show-icon mr-4" %>
    </div>
  <% else %>
    <%= image_tag "no-image-icon.jpeg", class:"show-icon mr-4"%>
  <% end %>
  <div class="h4 my-0 mr-3 font-weight-normal"><%= @user.name %></div>
  <p class="mr-md-auto"><%= @user.favteam %></p>
  <nav class="my-2 my-md-0 mr-md-3">
    <% if current_user&.id == @user.id %>
        <%= link_to("設定", edit_user_path, class:"btn btn-outline-secondary")%>
    <% end %>
  </nav>
</div>

<div class="user-show-body py-4">
  <div class="mb-5 shadow-sm">
    <%# 投稿・Likeタブ %>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item w-50">
        <a class="nav-link rounded-0 text-center active black-link" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Log</a>
      </li>
      <li class="nav-item w-50">
        <a class="nav-link rounded-0 text-center black-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">いいね</a>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <%# 自分の投稿 %>
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <table class="table table-borderless mt-3">
          <tbody>
            <% @user.ballpark_logs.each do |ballpark_log| %>
              <tr>
                <td><%= ballpark_log.game.date.strftime("%-m/%d")%></td>
                <td>
                  <% if ballpark_log.result == "win" %>
                    <p>○</p>
                  <% else %>
                    <p>●</p>
                  <% end%>
                </td>
                <td class="row"> 
                  <div class="col-md-3 d-flex justify-content-end">
                    <%= ballpark_log.game.visitor_team.initial%>
                  </div>
                  <div class="col-md-6 row d-flex justify-content-center">
                      <%= ballpark_log.game.visitor_score%>
                      <span> - </span>
                      <%= ballpark_log.game.home_score%>
                  </div>
                  <div class="col-md-3 d-flex justify-content-start">
                    <%= ballpark_log.game.home_team.initial%>
                  </div>
                </td>
                <td><%= link_to(ballpark_log.title, ballpark_log, class:"noline black-link") %></td>
                <% if current_user == @user %>
                  <td class="btn-group">
                    <button type="button" class="btn btn-danger" data-toggle="popover" data-content="It's very engaging. Right?">Click</button>
                    <%= link_to("編集", edit_ballpark_log_path(ballpark_log), class:"btn btn-outline-secondary") %>
                    <%= link_to("削除", ballpark_log, method: :delete, data: { confirm: "「#{ballpark_log.title}」を削除します。よろしいですか？" }, class:"btn btn-outline-danger") %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <%# いいねした投稿 %>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <table class="table table-borderless mt-3">
          <tbody>
            <% @user.like_ballpark_logs.each do |like_ballpark_log| %>
              <tr>
                <td>
                  <% if like_ballpark_log.user.image.attached? %>
                    <div class="rounded-circle">
                      <%= image_tag like_ballpark_log.user.image, class:"index-icon mr-4" %>
                    </div>
                  <% else %>
                    <%= image_tag "no-image-icon.jpeg", class:"index-icon mr-4"%>
                  <% end %>
                </td>
                <td><%= link_to(like_ballpark_log.user.name, user_path(like_ballpark_log.user_id), class:"noline black-link") %></td>
                <td><%= link_to(like_ballpark_log.title, like_ballpark_log, class:"noline black-link") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>   
  </div> 
</div>